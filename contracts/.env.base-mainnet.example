# Payverge Deployment Configuration - Base Mainnet
# Copy this file to .env and fill in your values

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Deployer private key (NEVER commit this to git)
PRIVATE_KEY=0x...

# Base Mainnet RPC URL
RPC_URL=https://mainnet.base.org

# ===========================================
# CONTRACT CONFIGURATION
# ===========================================

# USDC contract address on Base Mainnet
USDC_TOKEN_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# Platform treasury address (where fees are collected)
PLATFORM_FEE_RECIPIENT=0x...

# Platform fee in basis points (200 = 2%, 100 = 1%, 50 = 0.5%)
PLATFORM_FEE_BPS=200

# Backend service address that can create bills
BILL_CREATOR_ADDRESS=0x...

# Business registration fee in USDC (6 decimals)
# 0 = free registration
# 10000000 = $10 USDC
# 50000000 = $50 USDC
REGISTRATION_FEE=0

# ===========================================
# VERIFICATION (OPTIONAL)
# ===========================================

# BaseScan API key for contract verification
ETHERSCAN_API_KEY=...

