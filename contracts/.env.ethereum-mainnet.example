# Payverge Deployment Configuration - Ethereum Mainnet
# Copy this file to .env and fill in your values

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Deployer private key (NEVER commit this to git)
PRIVATE_KEY=0x...

# Ethereum Mainnet RPC URL (use Alchemy, Infura, or similar)
RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY

# ===========================================
# CONTRACT CONFIGURATION
# ===========================================

# USDC contract address on Ethereum Mainnet
USDC_TOKEN_ADDRESS=0xA0b86a33E6441e6e80A0f0E8C6e756d2a1d8C2e7

# Platform treasury address (where fees are collected)
PLATFORM_FEE_RECIPIENT=0x...

# Platform fee in basis points (200 = 2%, 100 = 1%, 50 = 0.5%)
PLATFORM_FEE_BPS=200

# Backend service address that can create bills
BILL_CREATOR_ADDRESS=0x...

# Business registration fee in USDC (6 decimals)
# 0 = free registration
# 50000000 = $50 USDC
# 100000000 = $100 USDC
REGISTRATION_FEE=0

# ===========================================
# VERIFICATION (OPTIONAL)
# ===========================================

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=...

# ===========================================
# NETWORK INFORMATION
# ===========================================
# Network: Ethereum Mainnet
# Chain ID: 1
# Block Explorer: https://etherscan.io
# Native Token: ETH
# USDC Contract: 0xA0b86a33E6441e6e80A0f0E8C6e756d2a1d8C2e7

